{
  "compilerOptions": {
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "allowJs": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "lib": [
          "es2019",
          "dom"
      ],
      "module": "commonjs",
      "target": "es2018",
      "baseUrl": ".",
      "strictNullChecks": true,
      "paths": {
          "*": [
              "node_modules/*",
              "typings/*"
          ]
      },
      "typeRoots": [
          "node_modules/@types",
          "typings"
      ],
      "outDir": "./build"
  },
  "include": [
      "./src/**/*",
      "typings/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.js",
  ]
}
